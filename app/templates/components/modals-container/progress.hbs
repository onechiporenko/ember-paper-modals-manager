<PaperDialog
  @fullscreen={{@options.fullscreen}}
  @escapeToClose={{@options.escapeToClose}}
  @opaque={{@options.opaque}}
  @focusOnOpen={{@options.focusOnOpen}}
  @clickOutsideToClose={{@options.clickOutsideToClose}}
  @closeTo={{@options.closeTo}}
  @openFrom={{@options.openFrom}}
  @origin={{@options.origin}}
  @parent={{@options.parent}}
  @onClose={{action "decline"}}>
  {{#if @options.titleComponent}}
    {{component
      @options.titleComponent
      options=@options
      confirm=(action "confirm")
      decline=(action "decline")}}
  {{/if}}
  <PaperDialogContent>

    {{#unless @options.titleComponent}}
      <h2 class="md-title">{{@options.title}}</h2>
    {{/unless}}

    {{#if @options.bodyComponent}}
      {{component
        @options.bodyComponent
        options=@options
        progress=progress
        done=done
        overall=promisesCount}}
    {{else}}
      <p>{{@options.body}}</p>
      <div class="layout-row layout-align-center">
        {{#if @options.circular}}
          {{paper-progress-circular
            value=progress
            class=@options.circularClass
            accent=@options.circularAccent
            warn=@options.circularWarn
            diameter=@options.circularDiameter
            strokeRatio=@options.circularStrokeRatio}}
        {{else}}
          {{paper-progress-linear
            value=progress
            accent=@options.linearAccent
            warn=@options.linearWarn}}
        {{/if}}
      </div>
    {{/if}}
  </PaperDialogContent>
  <PaperDialogActions class="layout-row">
    <span class="flex"></span>
    {{#if @options.footerComponent}}
      {{component
        @options.footerComponent
        options=@options}}
    {{else}}
      {{#if @options.cancelable}}
        <PaperButton
          @primary={{@options.declineButtonPrimary}}
          @fab={{@options.declineButtonFab}}
          @mini={{@options.declineButtonMini}}
          @noInk={{@options.declineButtonNoInk}}
          @raised={{@options.declineButtonRaised}}
          @iconButton={{@options.declineButtonIcon}}
          @onClick={{action "cancel"}}>
          {{#if @options.declineButtonIcon}}
            {{paper-icon @options.declineButtonIcon}}
          {{/if}}
          {{@options.cancel}}
        </PaperButton>
      {{/if}}
    {{/if}}
  </PaperDialogActions>
</PaperDialog>