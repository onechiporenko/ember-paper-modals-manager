{{! BEGIN-SNIPPET components-custom-prompt-confirm-body.hbs }}
<p>Custom Prompt Confirm Body Component</p>
<p>Please enter a "{{@options.promptValue}}" without quotes</p>
<PaperForm as |form|>
  <form.input
    @value={{this.promptValue}}
    @onChange={{this.updatePromptValue}}/>
</PaperForm>
{{! END-SNIPPET }}